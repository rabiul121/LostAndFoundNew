@{
    ViewData["Title"] = "Home Page";
}
<style>
    .carousel .carousel-item {
        height: 90vh;
    }

    .carousel-item img {
        position: absolute;
        object-fit: cover;
        top: 0;
        left: 0;
        min-height: 500px;
    }
    .carousel-caption {
        background-color: rgba(254, 254, 250, .5);
        color: #000;
        font-family: Arial, Helvetica, sans-serif;
    }
        .carousel-caption > h5 {
            font-size: 50px;
            opacity: 100%;
            font-weight: 700;
            text-shadow: 1px 1px 0px #645264;
        }
        .carousel-caption > p {
            font-size: 25px;
            opacity: 100%;
            font-weight: 500;
        }
    .pb-3 {
        padding-bottom: 0 !important;
    }
    .bd-example{
        min-height: 1067px;
    }
        
</style>
<div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/banner11.jpg" class="d-block w-100" alt="lost wallet in the street">
                <div class="carousel-caption d-none d-md-block">
                    <h5>A lost wallet in street!</h5>
                    <p>"Lost items are often found in the last place you look, but they are rarely found if you don't look at all."</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/banner2.jpg" class="d-block w-100" alt="lost wallet in the street">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Check your belongings before they lost!</h5>
                    <p>"Lost items can be replaced, but not the moments they gave us."</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/banner3.jpg" class="d-block w-100" alt="found wallet in the street">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Don't Forget to pick your Wallet!</h5>
                    <p>"Lost items can sometimes be found, but lost time is gone forever."</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>