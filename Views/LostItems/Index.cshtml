@model List<LostItem>

@{
    ViewData["Title"] = "List of Lost Items";
}

<div style="text-align:center;font-weight:bold;padding:20px;letter-spacing:1px;font-size:30px;color:blueviolet">
    <h2>List of Lost Items</h2>
</div>
<div class="lost">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @item.ItemName
                                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                        {
                                            <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                        }
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6" style=" width: 500px; height: 300px">
                            <img src="@item.PhotoURL" style=" width: 100%; height: 100%; object-fit: cover;" "@item.ItemName" />
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text"><b>Item Name: </b>@item.ItemName</p>
                                <p class="card-text"><b>Category: </b>@item.Category</p>
                                <p class="card-text"><b>Lost Area: </b>@item.LostArea</p>
                                <p class="card-text"><b>Lost Date: </b>@item.Date.ToString("dd MMM yy")</p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye-fill"></i> Show Details
                                    </a>
                                    <a class="btn btn-success text-white" asp-controller="lostItem" asp-action="#"
                                       asp-route-id="@item.Id">
                                        <i class="bi bi-cart-plus"></i> Claim
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
