@model User

@{ 
    ViewData["title"] = "Register a new user";
}

<div class="text-center">
    <p>
        <i class="bi bi-person-fill-add" style="font-size:50px"></i>
    </p>
    <h3 style="margin-top:-26px">Sign Up </h3>
</div>
<div class="col-md-6 offset-md-3 text">
   
    <div class="details">
        <div class="">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="font-weight-bold">First Name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter First Name..." />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Last Name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter Last Name..." />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter Username..." />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Password</label>
                    <input asp-for="Password" class="form-control"  type="password" placeholder="Enter Password..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter Email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Contact</label>
                    <input asp-for="Contact" class="form-control" placeholder="Enter Contact info..." />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" value="Create" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>